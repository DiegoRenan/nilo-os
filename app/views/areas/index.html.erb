<center><h1>Areas</h1></center>

<div class="row align-items-center">
    <% @areas.each do |area| %>
        <div class="col-8">
          <%=link_to area.name, area %>
        </div>
        <% if current_user.admin? %>
          <div class="col-2">
            <%= link_to 'Editar', edit_area_path(area) %>
          </div>
          <div class="col-2">
            <%= link_to 'Deletar', area, method: :delete, data: { confirm: "Deletar #{area.name}?" } %>
          </div>
        <% else %>
          <div class="col-4"></div>
        <%end%>

        <div class="container">
          <div class="container col-12 line"></div>
        </div>

    <% end %>
</div>

<br>

<% if current_user.admin? %>
<%= link_to 'Novo Departamento', new_area_path, class: "btn btn-success btn-block" %>
<% end %>