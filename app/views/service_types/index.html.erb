<center><h1>Tipos de Serviços</h1></center>

<div class="row align-items-center">
    <% @service_types.each do |service_type| %>
        <div class="col-8">
          <%=link_to service_type.title, service_type %>
        </div>
        <% if current_user.admin? %>
          <div class="col-2">
            <%= link_to 'Edit', edit_service_type_path(service_type) %>
          </div>
          <div class="col-2">
            <%= link_to 'Deletar', service_type, method: :delete, data: { confirm: "Deletar #{service_type.title}?" } %>
          </div>

          <div class="container">
            <div class="container col-12 line"></div>
          </div>

        <%end%>
    <% end %>
</div>
<br>
<% if current_user.admin? %>
<%= link_to 'Npvo Tipo de Serviço', new_service_type_path, class: "btn btn-success btn-block" %>
<% end %>