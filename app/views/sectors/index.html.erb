<% provide(:title, 'Setores') %>

<div class="row align-items-center">
  <% @departments.each do |department| %>
    <% department.sectors.each do |sector| %>
        <div class="col-4">
          <%= link_to sector.name, department_sector_path(department, sector) %>
        </div>
        <div class="col-4">
          <%= sector.department.name %>
        </div>
        <% if current_user.admin? %>
          <div class="col-2">
            <%= link_to 'Edit', edit_department_sector_path(department, sector) %>
          </div>
          <div class="col-2">
            <%= link_to 'Deletar', sector, method: :delete, data: { confirm: 'Deletar setor #{sector.name}?' } %>
          </div>
        <%end%>

        <div class="container">
          <div class="col-12 line"></div>
        </div>
        
    <% end %>
  <%end%>
</div>

<br>

