<%= form_with(model:[@department, @department.sectors.build], local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="form-group">
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <%= f.submit "Criar Setor", class: "btn btn-success btn-block" %>
<% end %>