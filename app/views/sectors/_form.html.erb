<%= form_for([@department, @sector]) do |f| %>
  
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Criar setor", class: "btn btn-success btn-block" %>
  </div>
<% end %>
