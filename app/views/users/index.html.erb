<% provide(:title, 'All users') %>
<center><h1>Usu√°rios</h1></center>


<ul class="users">
  <div class="row">
  <% @users.each do |user| %>
    <li class="col-4">
    	<span>
          <% if user.picture? %>
      			<%= image_tag user.picture.url, size: 50 %>
      		<%end%>
      </span>
    </li>

    <li class="col-4">

     	<%= link_to user.name, user %>
    </li>

    <li class="col-2">
        <% if current_user.admin? %>
          <%= link_to "Editar", edit_user_path(user) %>
        <% else %>

        <%end%>
    </li>

    <li class="col-2">
        <% if current_user.admin? && !current_user?(user) %>
          <%= link_to "delete", user, 
                                method: :delete,
                                data: { confirm: "Deletar #{user.name}?" } %>
        <% else %>

        <%end%>
    </li>
  <% end %>
  </div>
</ul>
