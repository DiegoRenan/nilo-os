<center><h1>Departamentos</h1></center>

<div class="users">
<ul class="row align-items-center">
    <% @departments.each do |department| %>
        <li class="col-8">
          <%=link_to department.name, department %>
        </li>
        <% if current_user.admin? %>
          <li class="col-2">
            <%= link_to 'Editar', edit_department_path(department) %>
          </li>
          <li class="col-2">
            <%= link_to 'Deletar', department, method: :delete, data: { confirm: 'Deletar #{department.name}?' } %>
          </li>
        <%end%>
    <% end %>
</ul>
</div>
<br>

<%= link_to 'Novo Departamento', new_department_path, class: "btn btn-success btn-block" %>
