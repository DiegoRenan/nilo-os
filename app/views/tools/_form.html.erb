<%= form_with(model: @tool, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :controller %>
    <%= f.text_field :controller, class: "form-control"  %>
  </div>
  

  <div class="form-group">
    <%= f.submit "Criar Função", class: "btn btn-success btn-block" %>
  </div>
<% end %>
