<% provide(:title, 'Nivel de Acesso') %>

<div class="row align-items-center">
    <% @roles.each do |role| %>
        <div class="col-8">
          <%=link_to role.name, role %>
        </div>
        <% if current_user.admin? %>
          <div class="col-2">
            <%= link_to 'Editar', edit_role_path(role) %>
          </div>
          <div class="col-2">
            <%= link_to 'Deletar', role, method: :delete, data: { confirm: "Deletar #{role.name}?" } %>
          </div>

          <div class="container-fluid">
            <div class="container-fluid col-12 line"></div>
          </div>

        <%end%>
    <% end %>
</div>
<br>
<% if current_user.admin? %>
<%= link_to 'Novo Nivel de Acesso', new_role_path, class: "btn btn-success btn-block" %>
<% end %>