<%= form_with(model: @role, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <label>Função</label>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Criar Função", class: "btn btn-success btn-block" %>
  </div>
<% end %>
